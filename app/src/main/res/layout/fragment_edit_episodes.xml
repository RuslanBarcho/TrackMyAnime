<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_inset"
    android:minWidth="350dp"
    android:orientation="vertical"
    tools:context=".ui.dialog.EditEpisodesFragment">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Edit"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:text="Episodes"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/edit_watched_episodes"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/controls_dark"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="16dp"
                android:textColor="@color/darker_color"
                android:textSize="16sp" />

            <Button
                android:id="@+id/edit_episodes"
                android:layout_width="50dp"
                android:layout_height="36dp"
                android:layout_alignEnd="@+id/edit_watched_episodes"
                android:layout_alignParentTop="true"
                android:background="@drawable/controls_active"
                android:text="9999"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/edit_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:text="Status: "
        android:textSize="18sp" />

    <Button
        android:id="@+id/edit_update"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/controls_active"
        android:text="Update" />

</LinearLayout>